/*                               KEY POSITIONS
                ╭─────────────────────┬─────────────────────╮
                │     LT3 LT2 LT1 LT0 │ RT0 RT1 RT2 RT3     │
                │ LM4 LM3 LM2 LM1 LM0 │ RM0 RM1 RM2 RM3 RM4 │
                │ LB4 LB3 LB2 LB1 LB0 │ RB0 RB1 RB2 RB3 RB4 │
                ╰───────╮ LH2 LH1 LH0 │ RH0 RH1 RH2 ╭───────╯
                        ╰─────────────┴─────────────╯             */


#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50


/* Letters */
ZMK_COMBO(q,           &kp Q,          LT3 LT2,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(z,           &kp Z,          RT2 RT3,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)



/* Clipboard Manuipulation */
ZMK_COMBO(redo,        &kp LC(Y),      LT1 LT0,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(undo,        &kp LC(Z),      LM1 LM0,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cut,         &kp LC(X),      LM3 LM2,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,        &kp LC(INS),    LM2 LM1,     BASE NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(paste,       &kp LS(INS),    LB2 LB1,     BASE NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(ctrlL,       &kp LC(L),      LM2 LM1,     BASE NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST) 

/* Vertical Top, Num Symbols */
ZMK_COMBO(at,          &kp AT,         LT3 LM3,    BASE NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
