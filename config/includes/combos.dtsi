/ {
    combos {
        compatible = "zmk,combos";


        combo_copy {
            timeout-ms = <18>;
            bindings = <&kp LC(INS)>;
            key-positions = <22 23>;
            layers = <0 1>;
            require-prior-idle-ms = <150>;
