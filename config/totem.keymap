        layer_3 {
            bindings = <
             &bt BT_SEL 4  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0    &trans  &trans  &trans          &trans  &bt BT_CLR
             &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans          &trans  &trans
&bootloader  &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans          &trans  &trans      &bootloader
                                         &trans        &trans        &trans          &trans  &trans  &bt BT_CLR_ALL
            >;
        };

        num {
            bindings = <
             &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans          &trans  &trans
             &kp N1        &kp N2        &kp N3        &kp N4        &kp N5          &trans  &trans  &trans          &trans  &trans
&trans       &kp N6        &kp N7        &kp N8        &kp N9        &kp N0          &trans  &trans  &trans          &trans  &trans      &trans
                                         &trans        &trans        &trans          &trans  &trans  &trans
